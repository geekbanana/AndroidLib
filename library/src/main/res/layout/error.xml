<?xml version="1.0" encoding="utf-8"?>
<com.cavalry.androidlib.view.stateview.view.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ripple_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:rv_color="#4D4D4D"
    app:rv_rippleDuration="100"
    android:background="#FF0000"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/iv_error"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/no_network" />

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="@string/no_network"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </LinearLayout>

</com.cavalry.androidlib.view.stateview.view.RippleView>